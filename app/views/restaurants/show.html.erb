<div class="container">

  <h1><%= @restaurant.name %></h1>

  <p><i><%= @restaurant.category.capitalize %></i></p>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p><br>

  <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %> <br>
  <%= link_to 'Back to Restaurants', restaurants_path %> <br><br>


  <h2>Reviews</h2>

  <% @reviews.each do |review| %>
    <p>Rating: <%= review.rating %></p>
    <p><%= review.content %></p><br>
  <% end %>
</div>
